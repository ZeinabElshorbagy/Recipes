<p>
  <h1><%= @recipe.name %></h1>
</p>

<div class="row">
  <div class="col-md-4 pull-right center">
    
    <p>
      <h5>Brought to u by: <%= @recipe.chef.chefname %></h5>
    </p>
  </div>
  <div class="col-md-8">
    <h3><%= @recipe.summary %></h3>
    <div class="well">
      <p>
        <strong>steps: </strong>
      </p>
      <%= @recipe.describtion %>
    </div>
  </div>
</div>

<h5><%= link_to "Back to all recipes", recipes_path, class: "btn btn-warning btn-small" %></h5>
